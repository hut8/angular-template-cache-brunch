{
  "name": "angular-template-cache-brunch",
  "version": "1.8.0",
  "main": "lib/index",
  "description": "Insert angular templates into $templateCache. Configurable with cool ES6 syntax",
  "author": "John Walker",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/j-walker23/angular-template-cache-brunch.git"
  },
  "bugs": {
    "url": "https://github.com/j-walker23/angular-template-cache-brunch/issues"
  },
  "homepage": "https://github.com/j-walker23/angular-template-cache-brunch#readme",
  "keywords": [
    "angularjs",
    "brunch",
    "ES6",
    "ES2015",
    "$templateCache"
  ],
  "scripts": {
    "coverage": "rm -rf reports && babel-node ./node_modules/.bin/isparta cover  --dir reports/coverage --report text --report html _mocha",
    "bdd": "mocha --compilers js:babel-core/register -w",
    "lint": "echo \"Get eslint when eslint-babel supports v6\"",
    "test": "npm run lint && npm run coverage",
    "build": "rm -rf lib && babel src --out-dir lib",
    "build:watch": "npm run build -- -w",
    "start": "npm-run-all -p test:watch build:watch",
    "prepush": "npm test",
    "prepublish": "npm run build",
    "preversion": "./bin/merge.sh",
    "version": "gulp changelog && git add changelog.md",
    "postversion": "git push --follow-tags",
    "rel": "./bin/release.sh",
    "commit": "commit-wizard"
  },
  "config": {
    "pre-git": {
      "pre-commit": "npm test",
      "post-merge": "npm install",
      "commit-msg": "validate-commit-msg",
      "pre-push": [],
      "post-commit": []
    }
  },
  "peerDependencies": {
    "brunch": ">= 1.8.0 < 2"
  },
  "devDependencies": {
    "babel-cli": "^6.2.0",
    "babel-core": "^6.2.0",
    "babel-istanbul": "^0.5.8",
    "babel-preset-es2015": "6.1.18",
    "babel-preset-stage-0": "6.1.18",
    "brunch": "^1.8.5",
    "chai": "^3.4.1",
    "chai-as-promised": "^5.1.0",
    "chai-things": "^0.2.0",
    "gulp": "github:gulpjs/gulp#4.0",
    "gulp-conventional-changelog": "^0.7.0",
    "isparta": "^4.0.0",
    "lodash": "^3.10.1",
    "mocha": "^2.3.4",
    "mocha-better-spec-reporter": "^3.0.1",
    "npm-run-all": "^1.3.1",
    "pre-git": "^1.2.11",
    "sinon": "^1.17.2",
    "sinon-chai": "^2.8.0",
    "sinon-stub-promise": "^0.1.0"
  },
  "dependencies": {
    "debug": "^2.2.0",
    "es6-promisify-all": "^0.1.0",
    "minimize": "^1.7.4"
  }
}
